  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://einanuxt3.vercel.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+customdecks",
      "url": "/editor?design=%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "features": [
    "offline-support",
    "mobile-optimized",
    "touch-gestures",
    "camera-integration",
    "haptic-feedback"
  ],
  "permissions": [
    "camera",
    "storage",
    "notifications"
